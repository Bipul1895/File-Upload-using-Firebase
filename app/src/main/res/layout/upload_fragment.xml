<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/id_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_choose_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/id_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/id_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_linear_layout"
        android:layout_above="@id/id_progress_bar"
        android:layout_marginTop="16dp"
        />
    
    <ProgressBar
        android:id="@+id/id_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        />



</RelativeLayout>